{
  "protocol_version": "1.0",
  "tools": [
    {
      "tool_name": "get_weather",
      "description": "Fetches the current weather for a specific city.",
      "endpoints": [
        {
          "url": "/api/weather",
          "method": "GET",
          "schema": {
            "type": "object",
            "properties": {
              "city": {
                "type": "string",
                "description": "The city name, e.g., London."
              }
            },
            "required": ["city"]
          }
        }
      ]
    }
  ]
}
